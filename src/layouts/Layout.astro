---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
const currentLang = Astro.currentLocale || "es";
---

<!doctype html>
<html lang={currentLang}>
	<head>
		<script>
			(function () {
				try {
					var theme = localStorage.getItem("theme");
					var prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
					if (theme === "dark" || (!theme && prefersDark)) {
						document.documentElement.classList.add("dark");
					}
				} catch (e) {}
			})();
		</script>

		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>

	<body class="min-h-screen relative">
		<div
			class="pointer-events-none fixed inset-0 -z-10 h-full w-full
			bg-white
			bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)]
			bg-[size:6rem_4rem]
			dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_0%,#000_0%,#111_100%)]
			dark:bg-black"
		>
			<div
				class="absolute inset-0 bg-[radial-gradient(circle_800px_at_100%_200px,#d5c5ff,transparent)] dark:bg-none"
			></div>
		</div>

		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	:root {
		color-scheme: light dark;
	}

	html.dark {
		color-scheme: dark;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		display: flex;
		justify-content: center;
		min-height: 100vh;
		flex-direction: column;
	}

	@media (prefers-reducted-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
